// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AMA {
  id            String     @id @default(cuid())
  title         String
  description   String?
  hostToken     String     @unique
  askToken      String     @unique
  answerToken   String     @unique
  digestToken   String     @unique
  isPublished   Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  questions     Question[]

  @@map("amas")
}

model Question {
  id          String   @id @default(cuid())
  text        String   // 140 character limit enforced in app logic
  amaId       String
  voterIPs    String   @default("") // JSON array of IP addresses as string
  voteCount   Int      @default(0)
  isHidden    Boolean  @default(false)
  createdAt   DateTime @default(now())

  ama         AMA      @relation(fields: [amaId], references: [id], onDelete: Cascade)
  answer      Answer?

  @@map("questions")
}

model Answer {
  id          String   @id @default(cuid())
  questionId  String   @unique
  core        String   // Core point
  steps       String   // Steps/process
  limits      String   // Limitations/considerations
  createdAt   DateTime @default(now())

  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@map("answers")
}
